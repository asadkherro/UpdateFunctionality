<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpdateFunctionality.MainPage"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Modern Button Style -->
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2C3E50"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="HeightRequest" Value="45"/>
            </Style>

            <!-- Google Button Style -->
            <Style x:Key="GoogleButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="#2C3E50"/>
                <Setter Property="BorderColor" Value="#E1E8ED"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="HeightRequest" Value="45"/>
            </Style>

            <!-- Modern Entry Style -->
            <Style x:Key="ModernEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="#2C3E50"/>
                <Setter Property="PlaceholderColor" Value="#7F8C8D"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HeightRequest" Value="45"/>
            </Style>

            <!-- Modern CheckBox Style -->
            <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Color" Value="#3498DB"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Login Form -->
            <StackLayout Grid.Column="0" 
                        VerticalOptions="Center" 
                        Spacing="20"
                        Margin="20,0,20,0">

                <!-- Logo/Icon -->
                <Frame BackgroundColor="#A5B4FC" 
                       CornerRadius="15" 
                       WidthRequest="60" 
                       HeightRequest="60"
                       HasShadow="False"
                       Padding="0"
                       HorizontalOptions="Start">
                    <Label Text="📊" 
                           FontSize="30" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Title and Subtitle -->
                <StackLayout Spacing="10">
                    <Label Text="Login" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"/>
                    <Label Text="See your growth and get support!" 
                           FontSize="14" 
                           TextColor="#7F8C8D"/>
                </StackLayout>

                <!-- OR Divider -->


                <!-- Email Field -->
                <StackLayout Spacing="5">
                    <Label Text="Email*" 
                           FontSize="13" 
                           TextColor="#2C3E50"/>
                    <Frame BackgroundColor="White" 
                           CornerRadius="8" 
                           HasShadow="False" 
                           BorderColor="#E1E8ED"
                           Padding="0">
                        <Entry x:Name="EmailEntry" 
                               Text="{Binding Email}"
                               Placeholder="Enter your email"
                               Keyboard="Email"
                               Style="{StaticResource ModernEntryStyle}"/>
                    </Frame>
                </StackLayout>

                <!-- Password Field -->
                <StackLayout Spacing="5">
                    <Label Text="Password*" 
                           FontSize="13" 
                           TextColor="#2C3E50"/>
                    <Frame BackgroundColor="White" 
                           CornerRadius="8" 
                           HasShadow="False" 
                           BorderColor="#E1E8ED"
                           Padding="0">
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Enter your password"
                               IsPassword="True"
                               Style="{StaticResource ModernEntryStyle}"
                               TextChanged="OnPasswordChanged"/>
                    </Frame>
                </StackLayout>

                <!-- Remember Me and Forgot Password -->
                <Grid ColumnDefinitions="*,*">
                    <StackLayout Grid.Column="0" 
                                Orientation="Horizontal" 
                                Spacing="10">
                        <CheckBox x:Name="RememberMeCheckBox" 
                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                        <Label Text="Remember me" 
                               FontSize="13" 
                               TextColor="#2C3E50" 
                               VerticalOptions="Center"/>
                    </StackLayout>

                    <Label Grid.Column="1" 
                           Text="Forgot password?" 
                           FontSize="13" 
                           TextColor="#3498DB" 
                           TextDecorations="Underline"
                           HorizontalOptions="End"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                        Text="Login" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding LoginCommand}"
                        Clicked="OnLoginClicked"/>

                <!-- Register Link -->
                <StackLayout Orientation="Horizontal" 
                            HorizontalOptions="Start">
                    <Label Text="Not registered yet? " 
                           FontSize="13" 
                           TextColor="#7F8C8D"/>
                    <Label Text="Create a new account" 
                           FontSize="13" 
                           TextColor="#3498DB" 
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCreateAccountTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <Grid ColumnDefinitions="*,Auto,*" 
                    VerticalOptions="Center" 
                    Margin="0,10">
                    <BoxView Grid.Column="0" 
                    BackgroundColor="#E1E8ED" 
                    HeightRequest="1" 
                    VerticalOptions="Center"/>
                    <Label Grid.Column="1" 
                    Text="  OR  " 
           TextColor="#7F8C8D" 
           FontSize="12"/>
                    <BoxView Grid.Column="2" 
             BackgroundColor="#E1E8ED" 
             HeightRequest="1" 
             VerticalOptions="Center"/>
                </Grid>

                <!-- Google Sign In Button -->
                <Button x:Name="GoogleSignInButton" 
                Style="{StaticResource GoogleButtonStyle}"
                Clicked="OnGoogleSignInClicked">
                    <Button.ImageSource>
                        <FileImageSource File="googleicon.png"/>
                    </Button.ImageSource>
                    <Button.Text>Sign in with Google</Button.Text>
                </Button>

            </StackLayout>

            <!-- Right Side - Illustration -->
            <Frame Grid.Column="1" 
                   BackgroundColor="White" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Margin="20">
                <Image x:Name="MainIllustration" 
                       Source="homepage.png"
                       Aspect="AspectFit" 
                       Margin="40"/>
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>